<% provide(:title, 'Edit Profile') %>

<div class="row justify-content-center">
  <div class="col-6">
    <h1>Update your profile</h1>
    <%= bootstrap_form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= form.text_field :name, autofocus: true %>
      <%= form.email_field :email, autocomplete: "email" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= form.password_field :password, autocomplete: "new-password", min: @minimum_password_length, help: "#{@minimum_password_length} characters minimum"  %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", min: @minimum_password_lengt %>

      <%= form.password_field :current_password, autocomplete: "current-password", help: "(we need your current password to confirm your changes)" %>

      <%= form.primary "Save changes" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to  "change", "http://gravatar.com/emails", target: "_blank", rel: "noopener" %>
    </div>
    <h2>Cancel my account</h3>

    <p>Unhappy?
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
    </p>

    <%= link_to "Back", :back %>
  </div>
</div>
