<% provide(:body_class, 'bg-light') %>
<% provide(:title, "#{@user.name} Profile") %>

<div class="container">
  <div class="row">
    <aside class="col-4">

      <h1>
        <%= gravatar_for(@user, class: "gravatar rounded-circle img-thumbnai") %><%= @user.name %>
      </h1>
    </aside>
    <div class="col-8">
      <% if @user.microposts.any? %>
        <h2>Microposts (<%= @user.microposts.count %>)</h2>
        <ol class="list-unstyled microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
    </div>
    <%= link_to 'Back', users_path %>
  </div>
</div>
